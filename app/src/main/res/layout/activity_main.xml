<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_marginHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/graph">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_marginTop="30dp"
                android:id="@+id/question"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Â¿Como te sientes el dia de hoy?"
                />

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/options"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageButton
                    android:src="@drawable/ic_verysad"
                    android:background="@android:color/transparent"
                    android:layout_marginHorizontal="10dp"
                    android:id="@+id/verySadButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

                <ImageButton
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_sad"
                    android:id="@+id/sadButton"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

                <ImageButton
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_neutral"
                    android:id="@+id/neutralButton"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

                <ImageButton
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_happy"
                    android:id="@+id/happyButton"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

                <ImageButton
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_veryhappy"
                    android:id="@+id/veryHappyButton"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
            </LinearLayout>

            <Button
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="guardar"
                android:textColor="@color/white"
                android:backgroundTint="@color/colorAccent"
                android:id="@+id/guardarButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <GridLayout
                android:id="@+id/bargraphs"
                android:columnCount="2"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginRight="15dp"
                    android:text="Muy Feliz"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:id="@+id/graphVeryHappy"
                    android:layout_width="250dp"
                    android:layout_height="20dp" />

                <TextView
                    android:layout_marginRight="15dp"
                    android:text="Feliz"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:id="@+id/graphHappy"
                    android:layout_width="250dp"
                    android:layout_height="20dp" />

                <TextView
                    android:layout_marginRight="15dp"
                    android:text="Neutral"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:id="@+id/graphNeutral"
                    android:layout_width="250dp"
                    android:layout_height="20dp" />

                <TextView
                    android:layout_marginRight="15dp"
                    android:text="Sad"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:id="@+id/graphSad"
                    android:layout_width="250dp"
                    android:layout_height="20dp" />

                <TextView
                    android:layout_marginRight="15dp"
                    android:text="Very Sad"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:id="@+id/graphVerySad"
                    android:layout_width="250dp"
                    android:layout_height="20dp" />

            </GridLayout>

        </LinearLayout>
        
    </ScrollView>

</LinearLayout>